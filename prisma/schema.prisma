generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id")
  name      String
  email     String   @unique
  password  String
  bookings  Booking[]
  createdAt DateTime @default(now())
}

model Booking {
  id        String   @id @default(auto()) @map("_id")
  userId    String
  date      DateTime
  service   String
  status    String // e.g., "booked", "cancelled"
  createdAt DateTime @default(now())
}